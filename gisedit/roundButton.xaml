    <SolidColorBrush x:Key="TabBorderBrush" Color="LightGray" />
    <SolidColorBrush x:Key="SelectedTabTextBrush" Color="Black" />
    <SolidColorBrush x:Key="UnSelectedTabTextBrush" Color="#4971A3" />

