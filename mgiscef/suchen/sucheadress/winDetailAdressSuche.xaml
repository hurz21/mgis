                                BorderThickness="1,1,1,1" 
                                FontFamily="Arial" 
                                FontSize="11"     HorizontalAlignment="Left"                 
                                Margin="0"                            
                                ItemTemplate="{StaticResource lvGemarkungsTemplate}"  >
                            <!--<ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Width="230"      />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>-->
                        </ListView>
                     
