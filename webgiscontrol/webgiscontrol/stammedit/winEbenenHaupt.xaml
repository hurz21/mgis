                                            <Button x:Name="btnInhaltschreiben" Click="btnInhaltschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Entstehung" Width="100"/>
                                            <TextBox x:Name="tbEntstehung" Width="378" Height="183" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" 
