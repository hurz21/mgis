                                        <TextBlock Text=" Pfad (View):" Width="150"/>
                                        <TextBox x:Name="tbPfadView" Width="390" IsEnabled="False"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>
                    

                        </StackPanel>
                        <StackPanel>
                            <GroupBox Header="Doku" Width="600" HorizontalAlignment="Left"
