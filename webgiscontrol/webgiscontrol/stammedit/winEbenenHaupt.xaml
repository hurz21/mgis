                                            <Button x:Name="btnMassstabschreiben" Click="btnMassstabschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Beschränkungen" Width="100"/>
                                            <TextBox Name="tbBeschraenk" Width="378" Height="66" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
