                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tabelle" Width="250"/>
                                    <TextBox Name="tbtabelle0" Width="150"/>
                                    <ComboBox Name="cmbtabelle0" SelectionChanged="cmbtabelle0_SelectionChanged"  ItemsSource="{Binding}"
                      DisplayMemberPath="tabellenname"  SelectedValuePath="tabellenname"  Width="20" HorizontalAlignment="Left"/>
                                    <Button x:Name="btntabelle0schreiben" Click="btntabelle0schreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Spaltenname der ID (tab_id)" Width="250"/>
                                    <TextBox Name="tbtab_ID0" Width="150"/>
                                    <ComboBox Name="cmbtabid0" SelectionChanged="cmbtabid0_SelectionChanged"  ItemsSource="{Binding}"
                      DisplayMemberPath="sachgebiet"  SelectedValuePath="sachgebiet"  Width="20" HorizontalAlignment="Left"/>
                                    <Button x:Name="btntabid0schreiben" Click="btntabid0schreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Titel zur Tabelle (tab_titel)" Width="250"/>
                                    <TextBox Name="tbtabtitel0" Width="150" TextChanged="tbtabtitel0_TextChanged"/>
                                    <Button x:Name="btntabtitel0schreiben" Click="btntabtitel0schreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="TabellenAnzeige (tabellen_anzeige)" Width="250"/>
