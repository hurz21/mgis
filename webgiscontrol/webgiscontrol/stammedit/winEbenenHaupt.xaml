                                            <Button x:Name="btnBeschraenkschreiben" Click="btnBeschraenkschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Datenabgabe" Width="100"/>
