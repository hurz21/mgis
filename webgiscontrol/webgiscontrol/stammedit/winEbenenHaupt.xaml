                                            <Button x:Name="btnDatenabgabeschreiben" Click="btnDatenabgabeschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>
                            <xctk:DropDownButton Content="Click Me hurz" Margin="15" Background="Wheat">
                                <xctk:DropDownButton.DropDownContent>
                                    <TextBlock Text="hurz"/>
                                </xctk:DropDownButton.DropDownContent>
                            </xctk:DropDownButton>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem  Header="TabellenDefinition" Name="tiTabellenDef">
