                                                <ComboBoxItem Tag="g">g - gruppe (Überschrift)</ComboBoxItem>
                                                <ComboBoxItem Tag="l">l - link (feststehender Text unter template)</ComboBoxItem>
                                                <ComboBoxItem Tag="n">n - normal</ComboBoxItem>
                                                <ComboBoxItem Tag="s">s - summe (mehere Datensätze 1 : n)</ComboBoxItem>
                                                <ComboBoxItem Tag="t">t- template (mehere Felder unter template)</ComboBoxItem>
                                                <ComboBoxItem Tag="c">c - coordinate aus geom</ComboBoxItem>
                                                <ComboBoxItem Tag="k">k - konstante (feststehender Text unter template)'</ComboBoxItem>
                                                k - konstante (feststehender Text unter template)
                                            </ComboBox>
                                            <Button x:Name="btnvorlagenTypschreiben" Click="btnvorlagenTypschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="CssClass" Width="70" ToolTip="Neuer Feldname"/>
                                            <TextBox Name="tbvorlagenCssClass" Width="280" TextChanged="tbvorlagenCssClass_TextChanged" />
                                            <ComboBox Name="cmbVorlagenCssClass" SelectionChanged="cmbVorlagenCssClass_SelectionChanged"   
