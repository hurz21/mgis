                                <StackPanel Margin="10" Name="spDoku">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Inhalt" Width="100"/>
                                            <TextBox Name="tbINhalt" Width="378" Height="206" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
