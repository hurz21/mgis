                                            <TextBox Name="tbAktualisiert" Width="150" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" TextChanged="tbAktualisiert_TextChanged"/>
                                            <Button x:Name="btnAktualisiertschreiben" Click="btnAktualisiertschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
