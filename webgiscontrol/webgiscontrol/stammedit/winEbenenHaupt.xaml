                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="Feldname" Width="70" ToolTip="alter Feldname"/>
                                            <TextBox Name="tbvorlagenFeldname" Width="280" TextChanged="tbvorlagenFeldname_TextChanged" />
                                            <ComboBox Name="cmbVorlagenFeldname" SelectionChanged="cmbVorlagenFeldname_SelectionChanged"  ItemsSource="{Binding}"
                      DisplayMemberPath="sachgebiet"  SelectedValuePath="sachgebiet"  Width="20" HorizontalAlignment="Left"/>
                                            <Button x:Name="btnvorlagenFeldnameschreiben" Click="btnvorlagenFeldnameschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="Titel" Width="70" ToolTip="Neuer Feldname"/>
                                            <TextBox Name="tbvorlagenTitel" Width="300" TextChanged="tbvorlagenTitel_TextChanged" />

                                            <Button x:Name="btnvorlagenTitelschreiben" Click="btnvorlagenTitelschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="Typ" Width="70" ToolTip=" "/>
                                            <TextBox Name="tbvorlagenTyp" Width="280" TextChanged="tbvorlagenTyp_TextChanged" />
