                                        <ComboBoxItem Tag="attributtabelle">attributtabelle</ComboBoxItem>
                                        <ComboBoxItem Tag="normal">normal</ComboBoxItem>
                                        <ComboBoxItem Tag="homepage">homepage</ComboBoxItem>
                                        <ComboBoxItem Tag="schalter">schalter</ComboBoxItem>
                                        <ComboBoxItem Tag="landschaftsplan">landschaftsplan</ComboBoxItem>
                                        <ComboBoxItem Tag="vorlage">vorlage</ComboBoxItem>
                                    </ComboBox>
                                    <Button x:Name="btnTabellenAnzeige0schreiben" Click="btnTabellenAnzeige0schreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Linkspalten (linktabs)" Width="250" ToolTip="linkspalten zu den zusatztabellen. in der reihenfolge der Tabellen (zuerst zu tabelle mit tab_nr=2, dann 3..."/>
                                    <TextBox Name="tbLinkspalten0" Width="150"/>
                                    <ComboBox Name="cmbLINKTabs0" SelectionChanged="cmbLINKTabs0_SelectionChanged"  ItemsSource="{Binding}"
                      DisplayMemberPath="sachgebiet"  SelectedValuePath="sachgebiet"  Width="20" HorizontalAlignment="Left"/>
                                    <Button x:Name="btnLINKTabs0schreiben" Click="btnLINKTabs0schreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                </StackPanel>
                                <!--<StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Anzahl Tabellen (tabellen_anzahl)" Width="250"/>
                                        <TextBox Name="tbABanzahl" Width="150"/>
                                    </StackPanel>-->
                     
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <StackPanel Name="rechts">
                        <GroupBox Header="DB-Anbindung (Attributtabelle)" Background="Beige"  Width="600" HorizontalAlignment="Left"
                                  Name="gb2"
                                        >
                            <StackPanel >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tabellen Nr (tab_nr)" Width="250"/>
                                    <TextBox Name="tbDBtab_nr1" Width="150"    />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Schema" Width="250"/>
                                    <TextBox Name="tbSchema1" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tabelle" Width="250"/>
                                    <TextBox Name="tbtabelle1" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Spaltenname der ID (tab_id)" Width="250"/>
                                    <TextBox Name="tbtabID1" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Titel zur Tabelle (tab_titel)" Width="250"/>
