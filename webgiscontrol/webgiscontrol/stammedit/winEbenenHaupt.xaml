                                                <ComboBoxItem Tag=""> </ComboBoxItem>
                                                <ComboBoxItem Tag="norm">norm</ComboBoxItem>
                                                <ComboBoxItem Tag="teil">teil</ComboBoxItem>
                                                <ComboBoxItem Tag="gruppe">gruppe</ComboBoxItem>
                                            </ComboBox>
                                            <Button x:Name="btnvorlagenCssClassschreiben" Click="btnvorlagenCssClassschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
