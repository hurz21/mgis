            </TabItem>
            <TabItem  Header="Tabellenvorlagen">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">

                        <StackPanel Orientation="Horizontal">
                            <DataGrid  Background="AntiqueWhite" Name="dgVorlagen" AutoGenerateColumns="True"  ItemsSource="{Binding}"    Width="850" Height="600"
                   SelectionChanged="dgSG_SelectionChanged" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
                            </DataGrid>
                            <StackPanel Margin="20">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="tab_nr=" Padding="3"></TextBlock>
                                    <TextBox Name="tbvorlagenTabnrEingabe" Width="30" >1</TextBox>
                                    <!--<Button Name="btnDatenTabelleRefresh" Content="Refresh" Click="btnDatenTabelleRefresh_Click" Margin="10,0,0,0"/>-->

                                </StackPanel>
                                <Button Name="btnAdd" Click="btnAdd_Click" Content="Hinzu" Margin="10"/>
                    
                                <!--<Button Name="btnNeuerTitel" Click="btnNeuerTitel_Click" Content="Bearbeiten" Margin="10"/>-->

                                <Button Name="btnRefreshVorlagen" Content="Refresh " Click="btnRefreshVorlagen_Click" Margin="10" />
                           
                                
                                <Border BorderThickness="1" BorderBrush="Black" Margin="0,140,0,0">
                                    <StackPanel>
                               
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="ID" Width="70"/>
                                            <TextBox Name="tbvorlagenID" Width="300" IsReadOnly="True"/>
                                            <!--<ComboBox Name="cmbSchemas0" SelectionChanged="cmbSchemas0_SelectionChanged"  ItemsSource="{Binding}"
                      DisplayMemberPath="schemaname"  SelectedValuePath="schemaname"  Width="20" HorizontalAlignment="Left"/>-->
                                            <!--<Button x:Name="btnvorlagenIDschreiben" Click="btnvorlagenIDschreiben_Click" Content=" OK" IsEnabled="False"
                                                ToolTip="Änderung in die DB-übernehmen"/>-->
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="TabNr" Width="70"/>
                                            <TextBox Name="tbvorlagenTabNr" Width="300" IsReadOnly="True"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Background="LightGreen">
                                            <TextBlock Text="Nr" Width="70" ToolTip="Die Reihenfolge in der Liste"/>
                                            <TextBox Name="tbvorlagenNr" Width="300" TextChanged="tbvorlagenNr_TextChanged" />
